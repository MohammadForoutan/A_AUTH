{
	"name": "test-docker",
	"version": "1.0.0",
	"main": "index.js",
	"author": "Mohammad <mmdfrn81@gmail.com>",
	"license": "MIT",
	"private": true,
	"scripts": {
		"postinstall": "husky install",
		"build": "tsc",
		"start": "dotenv -e src/config/env/.env.production -- tsc && node dist/index.js",
		"start:dev": "dotenv -e src/config/env/.env.development -- ts-node-dev src/index.ts",
		"test": "dotenv -e src/config/env/.env.test -- jest --forceExit",
		"test:watch": "dotenv -e src/config/env/.env.test -- jest --watchAll --forceExit",
		"format": "prettier --write src",
		"lint": "eslint src/**.{js,ts} --fix",
		"prisma:migrate-dev": "dotenv -e src/config/env/.env.development -- prisma migrate dev --name rest_token && npx prisma generate",
		"prisma:migrate-test": "dotenv -e src/config/env/.env.test -- prisma migrate dev --name rest_token && prisma generate",
		"prisma:push": "prisma db push",
		"prisma:studio": "prisma studio"
	},
	"dependencies": {
		"bcrypt": "^5.0.1",
		"celebrate": "^15.0.1",
		"cors": "^2.8.5",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.1",
		"express": "^4.18.1",
		"express-rate-limit": "^6.4.0",
		"helmet": "^5.1.0",
		"morgan": "^1.10.0",
		"nodemailer": "^6.7.6",
		"prisma": "^4.0.0"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.0.3",
		"@commitlint/config-conventional": "^17.0.3",
		"@prisma/client": "^4.0.0",
		"@types/bcrypt": "^5.0.0",
		"@types/cors": "^2.8.12",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.13",
		"@types/jest": "^28.1.3",
		"@types/morgan": "^1.9.3",
		"@types/node": "^18.0.0",
		"@types/nodemailer": "^6.4.4",
		"@types/supertest": "^2.0.12",
		"@types/swagger-ui-express": "^4.1.3",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"dotenv-cli": "^5.1.0",
		"eslint": "^8.18.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.1.0",
		"husky": "^8.0.1",
		"jest": "^28.1.2",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"supertest": "^6.2.3",
		"ts-jest": "^28.0.5",
		"ts-node-dev": "^2.0.0",
		"typescript": "^4.7.4"
	}
}
